<body ng-controller="CalculatorController" class="bg-light py-5">

    <div class="container">
        <div class="card shadow-sm">
            <div class="card-header text-center bg-primary text-white">
                <h3>Kalkulator Gaya Hidup Sehat</h3>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="weight" class="form-label">Berat Badan (kg)</label>
                        <input type="number" class="form-control" id="weight" ng-model="weight"
                            placeholder="Masukkan berat badan" required>
                    </div>
                    <div class="mb-3">
                        <label for="height" class="form-label">Tinggi Badan (cm)</label>
                        <input type="number" class="form-control" id="height" ng-model="height"
                            placeholder="Masukkan tinggi badan" required>
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Usia (tahun)</label>
                        <input type="number" class="form-control" id="age" ng-model="age" placeholder="Masukkan usia"
                            required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Jenis Kelamin</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="male" value="male" ng-model="gender">
                            <label class="form-check-label" for="male">Laki-Laki</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="female" value="female" ng-model="gender">
                            <label class="form-check-label" for="female">Perempuan</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="activityLevel" class="form-label">Tingkat Aktivitas</label>
                        <select class="form-select" id="activityLevel" ng-model="activityLevel">
                            <option value="1.2">Sedentary (jarang bergerak)</option>
                            <option value="1.375">Ringan (olahraga ringan 1-3 hari/minggu)</option>
                            <option value="1.55">Sedang (olahraga sedang 3-5 hari/minggu)</option>
                            <option value="1.725">Aktif (olahraga berat 6-7 hari/minggu)</option>
                            <option value="1.9">Sangat Aktif (pekerjaan fisik berat/olahraga berat setiap hari)</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-primary" ng-click="calculateCalories()">Hitung
                            Kalori</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <h5 ng-if="calories">Kebutuhan Kalori Harian: <strong>{{ calories | number:0 }}</strong> kalori</h5>
            </div>
        </div>
    </div>

