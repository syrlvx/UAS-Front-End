    <!-- Featured Articles Section -->
    <section id="trends" class="container my-5">
        <h2 class="text-center mb-4">Latest in Wellness</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% articles.forEach(article=> { %>
                <!-- Card for article -->
                <div class="col">
                    <div class="card shadow-sm hover-card" style="height: 400px;">
                        <div class="card-img-container" style="height: 200px; overflow: hidden;">
                            <img src="<%= article.image1 %>" class="card-img-top w-100 h-100 object-fit-cover"
                                alt="<%= article.title %>">
                        </div>
                        <div class="card-body" style="height: 150px; overflow: hidden;">
                            <h5 class="card-title" style="font-size: 1.1rem;">
                                <%= article.judul %>
                            </h5>
                            <p class="card-text" style="font-size: 0.9rem;">
                                <%= article.subjudul %>
                            </p>
                            <!-- Update data-bs-target to reference the modal ID -->
                            <a href="#" class="btn btn-outline-primary" data-bs-toggle="modal"
                                data-bs-target="#infoModal<%= article.id %>">
                                Read more
                            </a>
                        </div>
                    </div>
                </div>
    
                <!-- Modal for article -->
                <div class="modal fade info-modal" id="infoModal<%= article.id %>" tabindex="-1"
                    aria-labelledby="infoModalLabel<%= article.id %>" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="infoModalLabel<%= article.id %>">
                                    <%= article.judul %>
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!-- Carousel -->
                                <div id="healthyEatingCarousel<%= article.id %>" class="carousel slide mb-4"
                                    data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active" style="height: 300px; overflow: hidden;">
                                            <img src="<%= article.image1 %>" class="d-block w-100" alt="Healthy food 1"
                                                style="height: 100%; width: 100%; object-fit: cover;">
                                        </div>
                                        <div class="carousel-item" style="height: 300px; overflow: hidden;">
                                            <img src="<%= article.image2 %>" class="d-block w-100" alt="Healthy food 2"
                                                style="height: 100%; width: 100%; object-fit: cover;">
                                        </div>
                                        <div class="carousel-item" style="height: 300px; overflow: hidden;">
                                            <img src="<%= article.image3 %>" class="d-block w-100" alt="Healthy food 3"
                                                style="height: 100%; width: 100%; object-fit: cover;">
                                        </div>
                                    </div>
                                    <button class="carousel-control-prev" type="button"
                                        data-bs-target="#healthyEatingCarousel<%= article.id %>" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button"
                                        data-bs-target="#healthyEatingCarousel<%= article.id %>" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                                <h5>
                                    <%= article.subjudul %>
                                </h5>
                                <p>
                                    <%= article.paragraf1 %>
                                </p>
                                <p>
                                    <%= article.paragraf2 %>
                                </p>
                                <p>
                                    <%= article.paragraf3 %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </section>

