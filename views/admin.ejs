<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, 
                   initial-scale=1.0">
    <title>GeeksForGeeks</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/responsive.css">
</head>

<body>

    <!-- for header part -->
    <header>

        <div class="logosec">
            <a class="logo">
                <img src="/assets/img/logo.png" alt="Logo" style="max-height: 60px; width: auto;">
            </a>
            <div class="logo-title">
                <strong>SEYUEL</strong>
            </div>
            <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210182541/Untitled-design-(30).png"
                class="icn menuicn" id="menuicn" alt="menu-icon">
        </div>

        <div class="searchbar">
            <input type="text" placeholder="Search">
            <div class="searchbtn">
                <img src="https://cdn-icons-png.flaticon.com/256/3917/3917754.png"
                    class="icn srchicn" alt="search-icon">
            </div>
        </div>

        <div class="message">
            <div class="circle"></div>
            <img src="https://cdn-icons-png.flaticon.com/512/1827/1827504.png" class="icn" alt="">
            <div class="dp">
                <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210180014/profile-removebg-preview.png"
                    class="dpicn" alt="dp">
            </div>
        </div>

    </header>

    <div class="main-container">
        <div class="navcontainer">
            <nav class="nav">
                <div class="nav-upper-options">
                    <div class="nav-option option1">
                        <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210182148/Untitled-design-(29).png"
                            class="nav-img" alt="dashboard">
                        <h3> Dashboard</h3>
                    </div>

                    <div class="option2 nav-option">
                        <a href="/" class="nav-link">
                            <img src="https://cdn-icons-png.flaticon.com/512/25/25694.png" class="nav-img" alt="home">
                            <h3> Home</h3>
                        </a>
                    </div>

                    <div class="nav-option option3">
                        <a href="/" class="nav-link">
                        <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183323/10.png" class="nav-img" alt="article">
                        <h3> Article</h3>
                        </a>
                    </div>

                    <div class="nav-option option4">
                        <a href="/pencarian" class="nav-link">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQy-ZbF9BCUx_yivWtMG7E0L1sY93Wurlu8mw&s"
                            class="nav-img" alt="pencarian">
                        <h3> Pencarian</h3>
                        </a>
                    </div>

                    <div class="nav-option option5">
                        <a href="/consul" class="nav-link">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQqLOtmrO7lQhzu0Kc4lnwcncBpHz_3TTqPjQ&s" class="nav-img" alt="consul">
                        <h3> Consul</h3>
                        </a>
                    </div>

                    <div class="nav-option option6">
                        <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183320/4.png"
                            class="nav-img" alt="settings">
                        <h3> Settings</h3>
                    </div>

                    <div class="nav-option logout " onclick="logout()">
                        <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183321/7.png"
                            class="nav-img" alt="logout">
                        <h3>Logout</h3>
                    </div>

                </div>
            </nav>
        </div>
        <div class="main">

            <div class="searchbar2">
                <input type="text" name="" id="" placeholder="Search">
                <div class="searchbtn">
                    <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210180758/Untitled-design-(28).png"
                        class="icn srchicn" alt="search-button">
                </div>
            </div>

            <div class="box-container">

                <div class="box box1">
                    <div class="text">
                        <h2 class="topic-heading">60.5k</h2>
                        <h2 class="topic">Article Views</h2>
                    </div>

                    <img src="https://cdn-icons-png.flaticon.com/512/402/402755.png"
                        alt="Views">
                </div>

                <div class="box box2">
                    <div class="text">
                        <h2 class="topic-heading">150</h2>
                        <h2 class="topic">Likes</h2>
                    </div>

                    <img src="https://cdn-icons-png.flaticon.com/512/2107/2107956.png" alt="likes">
                </div>

                <div class="box box3">
                    <div class="text">
                        <h2 class="topic-heading">320</h2>
                        <h2 class="topic">Comments</h2>
                    </div>

                    <img src="https://cdn-icons-png.flaticon.com/512/1380/1380338.png"
                        alt="comments">
                </div>

                <div class="box box4">
                    <div class="text">
                        <h2 class="topic-heading">70</h2>
                        <h2 class="topic">Published</h2>
                    </div>

                    <img src="https://cdn-icons-png.flaticon.com/512/2530/2530994.png" alt="published">
                </div>
            </div>

            <div class="report-container">
                <div class="report-header">
                    <h1 class="recent-Articles">User Data</h1>
                </div>
            
                <div class="report-body">
                    <div class="report-topic-heading">
                        <h3 class="t-op">Email</h3>
                        <h3 class="t-op">Username</h3>
                    </div>
            
                    <div class="items">
                        <% users.forEach(user=> { %>
                            <div class="item1">
                                <h3 class="t-op-nextlvl">
                                    <%= user.email %>
                                </h3>
                                <h3 class="t-op-nextlvl">
                                    <%= user.username %>
                                </h3>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>

    <script src="/js/admin.js"></script>
    <script>
        function logout() {
            fetch('/logout', { method: 'POST' })
                .then(() => {
                    window.location.href = '/'; // Redirect ke halaman utama
                })
                .catch(err => {
                    console.error("Logout failed:", err);
                });
        }
    </script>
</body>

</html>