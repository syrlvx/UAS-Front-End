<!DOCTYPE html>
<html lang="en" ng-app="loginApp">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <link rel="stylesheet" href="/css/login.css">
</head>

<body ng-controller="LoginController">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/"><strong>Seyuel Lifestyle</strong></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto d-flex align-items-center">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Wellness
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/pencarian">Calories</a></li>
                            <li><a class="dropdown-item" href="/kalkulator">Nutrition Calculator</a></li>
                            <li><a class="dropdown-item" href="/consul">Consultancy</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="">Daily Planner</a></li>
                    <li class="nav-item"><a class="nav-link" href="">Notes</a></li>
                    <li class="nav-item"><a class="nav-link" href="/mark">Mark As Done</a></li>
                    <li class="nav-item ms-3">
                        <a class="nav-link" href="/login"><button type="submit" class="btn btn-primary">Login</button></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Background Container -->
    <div class="background-container">
        <!-- Background image container -->
    </div>

    <!-- Login Form Container -->
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card p-4 shadow-lg" id="login-card">
            <h3 class="text-center mb-4">Login</h3>
            <form name="loginForm" ng-submit="submitForm()" novalidate>
                <!-- Email Field -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" placeholder="Enter your email"
                        ng-model="user.email" required>
                    <div class="text-danger" ng-show="emailError">
                        Email is required and must be valid.
                    </div>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" class="form-control" placeholder="Enter your password"
                        ng-model="user.password" required>
                    <div class="text-danger" ng-show="passwordError">
                        Password is required at least 6 characters.
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mt-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

                <div class="text-center mt-3">
                    <a href="/signup" class="text-primary">Don't have an account?</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="/js/login.js"></script>

</body>

</html>